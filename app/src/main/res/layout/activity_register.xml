<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stuntcare.RegisterActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginStart="142dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon2"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:id="@+id/R_img_1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_marginTop="219dp"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:textColor="@color/text_color_register"
        android:id="@+id/R_txt_1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/R_txt_1"
        android:text="@string/create"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="14sp"
        android:textColor="@color/text_color_register"
        android:id="@+id/R_txt_2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:layout_marginTop="295dp"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textColor="@color/text_color_register"
        android:id="@+id/R_txt_3"
        />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:layout_marginTop="325dp"
        android:layout_marginStart="48dp"
        android:orientation="vertical"
        android:id="@+id/R_linearLayout_1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/R_txt_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:hint="@string/inputEmail"
            android:inputType="textEmailAddress"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        android:layout_marginTop="387dp"
        android:layout_marginStart="48dp"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textColor="@color/text_color_register"
        android:id="@+id/R_txt_4"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:layout_marginTop="417dp"
        android:layout_marginStart="48dp"
        android:orientation="vertical"
        android:id="@+id/R_linearLayout_2"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:hint="@string/inputPassword"
            android:textSize="12sp"
            android:id="@+id/R_txt_password"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="479dp"
        android:layout_marginStart="48dp"
        android:text="@string/confirmPassword"
        android:fontFamily="@font/poppins_bold"
        android:textSize="16sp"
        android:textColor="@color/text_color_register"
        android:id="@+id/R_txt_5"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:layout_marginTop="509dp"
        android:layout_marginStart="48dp"
        android:id="@+id/R_linearLayout_3"
        android:orientation="vertical"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button"
            android:hint="@string/inputPasswordAgain"
            android:id="@+id/R_txt_confirmPassword"
            android:inputType="textPassword"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/R_btn_1"
        android:layout_width="297dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="611dp"
        android:background="@drawable/button"
        android:backgroundTint="@color/text_color_register"
        android:fontFamily="@font/poppins_bold"
        android:text="@string/register"
        android:textColor="@color/white"
        android:textSize="16sp"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registerGoogle"
        android:layout_marginTop="698dp"
        android:layout_marginStart="48dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        android:textColor="@color/text_color_register"
        android:textSize="16sp"
        android:id="@+id/R_btn_2"
        android:fontFamily="@font/poppins_bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_register"
        android:text="@string/alreadyAccount"
        android:layout_below="@id/R_btn_2"
        android:layout_centerHorizontal="true"
        android:id="@+id/R_txt_6"
        />
    








</RelativeLayout>